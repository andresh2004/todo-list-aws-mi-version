pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
    }

    stages {
        stage('Get Code') {
            steps {
                echo "ğŸ“¥ Clonando el repositorio y cambiando a rama develop"
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/develop']],
                    userRemoteConfigs: [[url: 'https://github.com/andresh2004/todo-list-aws-mi-version']]
                ])
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "ğŸ“¦ Instalando dependencias necesarias para anÃ¡lisis y pruebas"
                sh '''
                    pip install bandit flake8 flake8-html pytest requests awscli
                '''
            }
        }

        stage('Static Test') {
            steps {
                echo "ğŸ” Ejecutando anÃ¡lisis estÃ¡tico con Bandit y Flake8"
                sh '''
                    mkdir -p reports
                    bandit -r src/ -f html -o reports/bandit_report.html || true
                    flake8 src/ --format=html --htmldir=reports/flake8-html || true
                '''
                publishHTML(target: [
                    reportName : 'Bandit Report',
                    reportDir  : 'reports',
                    reportFiles: 'bandit_report.html',
                    keepAll    : true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: true
                ])
                publishHTML(target: [
                    reportName : 'Flake8 Violations',
                    reportDir  : 'reports/flake8-html',
                    reportFiles: 'index.html',
                    keepAll    : true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: true
                ])
            }
        }

        stage('Deploy') {
            steps {
                echo "ğŸš€ Desplegando aplicaciÃ³n con AWS SAM"
                sh '''
                    echo "ğŸ“ Validando estructura del workspace"
                    ls -la
                        
                    echo "ğŸ“ Contenido de src"
                    ls -la src

                    sam build --template-file template.yaml

                    # Despliegue sin necesidad de bucket explÃ­cito
                    sam deploy --stack-name staging-todolist-aws \
                               --s3-bucket aws-sam-cli-managed-default-samclisourcebucket-7xmahjfstf4l \
                               --capabilities CAPABILITY_IAM \
                               --region us-east-1 \
                               --no-confirm-changeset \
                               --no-fail-on-empty-changeset
                '''
            }
        }

        stage('Rest Test') {
            steps {
                echo "ğŸ§ª Ejecutando pruebas de integraciÃ³n REST con pytest"
                sh '''
                    pip install pytest requests
                    
                    echo "ğŸ” Obteniendo la URL base de la API desplegada..."
                    API_URL=$(aws cloudformation describe-stacks --stack-name staging-todolist-aws \
                    --query "Stacks[0].Outputs[?OutputKey=='CreateTodoApi'].OutputValue" --output text)

                                   
                    echo "ğŸŒ URL pÃºblica detectada: $API_URL"
                    export API_URL=$API_URL

                    echo "ğŸ§ª Ejecutando pytest..."
                    pytest test/integration/todoApiTest.py --maxfail=1 --disable-warnings -q
                    
                '''
            }
        }
    }
}
