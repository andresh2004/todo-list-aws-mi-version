pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Get Code') {
            steps {
                echo "Obteniendo c칩digo fuente..."
            }
        }

        stage('Static Test') {
            steps {
                echo '游댌 Ejecutando an치lisis est치tico con Flake8 y Bandit...'

                sh 'pip install --user flake8 bandit flake8-html'

                // Set PATH
                sh 'export PATH=$PATH:$HOME/.local/bin && flake8 src/ --format=html --htmldir=flake8_report --exit-zero'

                sh 'export PATH=$PATH:$HOME/.local/bin && bandit -r src/ -f html -o bandit_report.html || true'
            }
        }
    }

    post {
        always {
            echo '游닍 Publicando reportes de an치lisis est치tico...'
            publishHTML([
                reportDir: 'flake8_report',
                reportFiles: 'index.html',
                reportName: 'Flake8 Report'
            ])
            publishHTML([
                reportDir: '.',
                reportFiles: 'bandit_report.html',
                reportName: 'Bandit Report'
            ])
        }
    }
}

