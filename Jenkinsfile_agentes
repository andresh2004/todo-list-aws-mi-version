pipeline {
    agent any

    stages {
        stage('Static Test') {
            steps {
                sh 'flake8 agentes_api/ --format=html --htmldir=flake8_report || true'
                sh 'bandit -r agentes_api/ -f html -o bandit_report.html || true'
            }
        }

        stage('Publicar Reportes') {
            steps {
                publishHTML([
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'flake8_report',
                    reportFiles: 'index.html',
                    reportName: 'Flake8 Report'
                ])
                publishHTML([
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: '.',
                    reportFiles: 'bandit_report.html',
                    reportName: 'Bandit Report'
                ])
            }
        }
    }
}

