pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
    }

    stages {
        stage('Get Code') {
            steps {
                echo "游닌 Clonando el repositorio y cambiando a rama develop"
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/develop']],
                    userRemoteConfigs: [[url: 'https://github.com/andresh2004/todo-list-aws-mi-version']]
                ])
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "游닍 Instalando dependencias necesarias para an치lisis y pruebas"
                sh '''
                    pip install bandit flake8 flake8-html pytest requests awscli
                '''
            }
        }

        stage('Static Test') {
            steps {
                echo "游댌 Ejecutando an치lisis est치tico con Bandit y Flake8"
                sh '''
                    mkdir -p reports
                    bandit -r src/ -f html -o reports/bandit_report.html || true
                    flake8 src/ --format=html --htmldir=reports/flake8-html || true
                '''
                publishHTML(target: [
                    reportName : 'Bandit Report',
                    reportDir  : 'reports',
                    reportFiles: 'bandit_report.html',
                    keepAll    : true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: true
                ])
                publishHTML(target: [
                    reportName : 'Flake8 Violations',
                    reportDir  : 'reports/flake8-html',
                    reportFiles: 'index.html',
                    keepAll    : true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: true
                ])
            }
        }

        stage('Deploy') {
            steps {
                echo "游 Desplegando aplicaci칩n con AWS SAM"
                sh '''
                    echo "游늬 Validando ruta actual y archivos"
                    pwd
                    ls -l

                    sam build --template-file template.yaml

                    # Despliegue sin necesidad de bucket expl칤cito
                    sam deploy --stack-name staging-todolist-aws \
                               --capabilities CAPABILITY_IAM \
                               --region us-east-1 \
                               --no-confirm-changeset \
                               --no-fail-on-empty-changeset
                '''
            }
        }

        stage('Rest Test') {
            steps {
                echo "游빍 Ejecutando pruebas de integraci칩n REST con pytest"
                sh '''
                    echo "游댍 Obteniendo URL p칰blica desde CloudFormation Outputs"
                    API_URL=$(aws cloudformation describe-stacks \
                        --stack-name staging-todolist-aws \
                        --query "Stacks[0].Outputs[?OutputKey=='TodoApi'].OutputValue" \
                        --output text)

                    echo "游깷 URL detectada: $API_URL"

                    API_URL=$API_URL pytest test/integration/todoApiTest.py --maxfail=1 --disable-warnings -q
                '''
            }
        }
    }
}
